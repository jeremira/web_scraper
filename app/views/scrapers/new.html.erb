<section>
  <%= form_tag(controller: :scrapers, action: :create) do %>
    <%= label_tag :url, "Enter a valid url :" %>
    <%= text_field_tag :url %>
    <%= submit_tag "Scrap it!" %>
  <% end %>
</section>
<section>
  <div class="embed-responsive embed-responsive-16by9">
    <% if @scraper.id %>
      <iframe class="embed-responsive-item" src="<%= scraper_path(@scraper.id) %>"></iframe>
    <% end %>
  </div>
</section>
