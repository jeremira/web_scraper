<!DOCTYPE html>
<html>
  <head>
    <title>WebScraper</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Enter an url', new_scraper_path %>
      <%= link_to 'Index', scrapers_path %>
    </nav>
    <span class="label label-success"><%= flash[:notice] %></span>
    <span class="label label-warning"><%= flash[:alert] %></span>
    <%= yield %>
  </body>
</html>
